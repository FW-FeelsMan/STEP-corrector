<Window x:Class="STEP_corrector.EditorProgress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        Title="Этапы редактирования" Height="450" Width="800"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center">
    <Grid Height="450" Width="800">

        <Grid Margin="0,25,0,0">
            <Grid.Background>
                <ImageBrush ImageSource="/background.png"/>
            </Grid.Background>
        </Grid>        
        <Label Content="Обработка..." HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Candara" FontSize="20" FontWeight="Bold"/>
        <Image gif:ImageBehavior.AnimatedSource="load.gif" Width="200" Height="200" />
    </Grid>
</Window>
